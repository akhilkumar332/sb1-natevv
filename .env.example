# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side only; never expose via VITE_)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com

# Netlify function request signing (recommended for server-to-server bridge calls)
FCM_BRIDGE_SIGNING_SECRET=replace_with_long_random_secret

# API Configuration
VITE_API_BASE_URL=http://localhost:5001/api/v1
VITE_LOCAL_API_URL=http://localhost:5180/api/v1
VITE_PROD_API_URL=https://your-production-url.com/api/v1

# Server Port
PORT=5001

# Analytics & Monitoring (Optional)
VITE_SENTRY_DSN=
VITE_GA_TRACKING_ID=

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
